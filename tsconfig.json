{
  "ts-node": {
    "moduleTypes": {
      "*": "cjs"
    },
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedParameters": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],
    "lib": ["ES6"]
  },
  "include": ["src/**/*"],
  "files": ["src/index.ts"]
}
